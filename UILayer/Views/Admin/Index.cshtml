@model EntityLayer.DTOs.AdminIndexDTO

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Anasayfa</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin/">Admin</a></li>
                    <li class="breadcrumb-item active">Index</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section>
<div class="row" style="margin:20px;">
<div class="col-lg-3 col-6">

<div class="small-box bg-info">
<div class="inner">
<h3>@Model.CustomerCounter</h3>
<p>Müşteri Sayısı</p>
</div>
<div class="icon">
<i class="ion ion-bag"></i>
</div>
</div>
</div>

<div class="col-lg-3 col-6">

<div class="small-box bg-success">
<div class="inner">
<h3>@Model.CustomerProductCounter</h3>
<p>Ürün Sayısı</p>
</div>
<div class="icon">
<i class="ion ion-stats-bars"></i>
</div>
</div>
</div>

<div class="col-lg-3 col-6">

<div class="small-box bg-warning">
<div class="inner">
<h3>@Model.DemandCounter</h3>
<p>Talep Sayısı</p>
</div>
<div class="icon">
<i class="ion ion-person-add"></i>
</div>
</div>
</div>

<div class="col-lg-3 col-6">

<div class="small-box bg-danger">
<div class="inner">
<h3>@Model.TotalIncome</h3>
<p>Toplam Gelir</p>
</div>
<div class="icon">
<i class="ion ion-pie-graph"></i>
</div>
</div>
</div>

</div>
</section>
